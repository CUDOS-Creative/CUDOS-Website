<div class="container px-4 mx-auto text-center">
  <div class="text-center">
    <h2>{{ block.title }}</h2>
  </div>
  <div class="flex flex-wrap justify-center">
    {% for item in block.icons %}
    <div class="text-center lg:flex-1 md:w-1/3 w-1/2 p-2 md:p-4" data-aos="fade-up" data-aos-delay="{{ loop.index - 1 }}00">
      <div class="icon">
        <img src="{{ get_image(item.icon).src }}" alt="{{ get_image(item.icon).alt }}">
      </div>
      <h4 class="mt-3">{{ item.title }}</h4>
    </div>
    {% endfor %}
  </div>
  <div data-aos="fade-up" data-aos-delay="{{ block.icons|length }}00">
    {% include 'partials/button.twig' %}
  </div>
</div>