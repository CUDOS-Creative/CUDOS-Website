<div class="container px-4 mx-auto text-center py-24">
  <div class="text-center">
    <h2>{{ block.title }}</h2>
  </div>
  <div class="flex flex-wrap justify-center">
    {% for item in block.icons %}
    <div class="text-center w-1/2 md:w-1/3 lg:w-1/{{ block.icons|length }} p-2 md:p-4">
      <div class="icon">
        <img src="{{ get_image(item.icon).src }}" alt="{{ get_image(item.icon).alt }}">
      </div>
      <h4>{{ item.title }}</h4>
    </div>
    {% endfor %}
  </div>
  {% include 'partials/button.twig' %}
</div>