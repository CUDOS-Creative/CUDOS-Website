<div class="container px-4 mx-auto">
  <div class="text-center lg:text-left lg:grid grid-cols-12 gap-4">

    <div class="lg:col-span-5 lg:text-right mb-7 lg:mb-0 lg:order-2">
      <ul class="categories">
      {% for item in terms %}
        <li data-aos="fade-left" data-aos-delay="{{ loop.index * 2 }}50">{{ item.name }}</li>
      {% endfor %}
      </ul>
    </div>

    <div class="col-span-12 lg:col-span-7 lg:order-1" data-aos="fade-left">
      <div class="wysiwyg wysiwyg--white">
        {{ block.text }}

        {% include 'partials/button.twig' %}
      </div>
    </div>


  </div>
</div>