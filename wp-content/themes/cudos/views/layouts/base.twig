<!DOCTYPE html>
<html {{ site.language_attributes }}>
    {% block head %}
        {% include 'partials/head.twig' %}
    {% endblock %}

    <body class="{{ body_class }}">
        {{ function('wp_body_open') }}
        <a class="skip-link screen-reader-text" href="#content">{{ _e('Skip to content') }}</a>
        <header class="header">
            {% block header %}
              <div class="container mx-auto px-4 py-4 flex items-center justify-between">
                <div>
                  <a class="logo" href="{{ site.url }}" aria-label="Aesthetica Digital.">
                    <img src="{{ theme.link ~ '/static/logo.png' }}" alt="Cudos Creative.">
                  </a>
                </div>

                <div>
                  <button class="hamburger hamburger--collapse js-nav-toggle" type="button">
                    <span class="hamburger-box">
                      <span class="hamburger-inner"></span>
                    </span>
                  </button>
                  
                  <nav id="nav-main" class="nav-main">
                    {% include 'partials/menu.twig' with {
                        items: menu.get_items
                    } %}
                  </nav>
                </div>
              </div>
            {% endblock %}
        </header>

        {% if fn('is_front_page') %}
          <div class="home-video">
            <div class="video-background">
              <iframe 
                  src="https://player.vimeo.com/video/487381949?autoplay=1&muted=1&loop=1&background=1" 
                  frameborder="0" 
                  allow="autoplay; fullscreen" 
                  allowfullscreen>
              </iframe>
            </div>
          </div>
        {% endif %}

        <section id="content">
            {% if title %}
                <h1>{{ title }}</h1>
            {% endif %}
            <div class="wrapper">
                {% block content %}
                    Sorry, no content
                {% endblock %}
            </div>
        </section>

        {% block footer %}
            {% include 'partials/footer.twig' %}
        {% endblock %}
        {{ function('wp_footer') }}
        {% do action('get_footer') %}
    </body>
</html>
